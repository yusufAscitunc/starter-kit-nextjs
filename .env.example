# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_AUTH_TOKEN_KEY=auth_token
NEXT_PUBLIC_AUTH_REFRESH_TOKEN_KEY=refresh_token

# Application
NEXT_PUBLIC_APP_NAME="Starter Kit Next.js"
NEXT_PUBLIC_APP_DESCRIPTION="Modern frontend for Starter Kit Java project"

# Feature Flags
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false

# Security
NEXT_PUBLIC_CSRF_ENABLED=true
NEXT_PUBLIC_CSRF_TOKEN_KEY=csrf_token

# Development
NODE_ENV=development